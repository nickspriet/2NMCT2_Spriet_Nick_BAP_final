@model KassaIT

@{
    Layout = "";
}

@using (Html.BeginForm("Edit", "Kassa", FormMethod.Post, new { id = "formulier" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Bewerk de kassa '@Html.DisplayFor(model => model.KassaNaam)'</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedOrganisatieID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SelectedOrganisatieID, ViewBag.Organisaties as SelectList, new { htmlAttributes = new { @class = "form-control", id = "SelectedOrganisationID" } })
                @Html.ValidationMessageFor(model => model.SelectedOrganisatieID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.KassaNaam, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KassaNaam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KassaNaam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Toestel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Toestel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Toestel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AankoopDatum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AankoopDatum, new { htmlAttributes = new { @class = "form-control datepicker dpAankoopDatum" } })
                @Html.ValidationMessageFor(model => model.AankoopDatum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VervalDatum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VervalDatum, new { htmlAttributes = new { @class = "form-control datepicker dpVervalDatum" } })
                @Html.ValidationMessageFor(model => model.VervalDatum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Save" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

